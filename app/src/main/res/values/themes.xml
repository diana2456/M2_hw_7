<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.M2_hw_7" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="first_btn_style" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/notosansjp_light</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:textSize">26sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/btn_blackground</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="first_bly_btn_style" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:textSize">26sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bly_backround</item>
    </style>

    <style name="first_black_btn_style">
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/btn_black_blackground</item>

    </style>
</resources>